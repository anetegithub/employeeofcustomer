@using vm = WebClient.ViewModels.EmployeeViewModel;
@model vm
@{
    ViewBag.Title = "Добавить сотрудника";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Добавить сотрудника</h2>
@using (Html.BeginForm("create", "employee", FormMethod.Post))
{
    <div class="row">
        <div class="col s6 input-field autocompletename">
            <input type="text" name="Name" value="" class="autocomplete" />
            <label for="Name">Имя</label>
        </div>
        <div class="col s6 input-field">
            <input type="text" name="Surname" value="" />
            <label for="Surname">Фамилия</label>
        </div>
    </div>
    <div class="row">
        <div class="col s6 input-field">
            <input type="number" name="Age" value="" />
            <label for="Name">Возраст</label>
        </div>
        <div class="col s6 input-field">
            @Html.DropDownList("Sex", Model.Sexs.Select(x => new SelectListItem() { Text = x.Title, Value = x.Id.ToString() }), new { onchange = "app.init_autocomplete();" })
            <label for="Sex">Пол</label>
        </div>
    </div>
    <div class="row">
        <div class="col s6 input-field">
            @Html.DropDownList("Department", Model.Departments.Select(x => new SelectListItem() { Text = x.Title, Value = x.Id.ToString() }))
            <label for="Department">Отдел</label>
        </div>
        <div class="col s6 input-field">
            @Html.DropDownList("Language", Model.Languages.Select(x => new SelectListItem() { Text = x.Title, Value = x.Id.ToString() }))
            <label for="Language">Имеет опыт работы с:</label>
        </div>
    </div>
    <div class="row">
        <div class="col s12">
            <button type="submit" class="btn light-blue">Создать</button>
        </div>
    </div>
}